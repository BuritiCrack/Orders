@typeparam Titem

@if(MyList == null)
{
    @if (Loading == null)
    {
        <div class="d-flex justify-content-center align-items-center">
            <img src="https://cdn.pixabay.com/animation/2022/07/29/03/42/03-42-05-37_512.gif" />
        </div>
    }
    else @Loading
}
else if (MyList.Count == 0)
{
    @if(NoRecord == null)
    {
        <p>No hay nada para mostrar</p>
    }
    else
    {
        @NoRecord
    }
}
else
{
    @Body
}
